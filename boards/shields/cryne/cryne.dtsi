#include <dt-bindings/zmk/matrix_transform.h>

/ {
  chosen {
    zmk,kscan = &kscan0;
    zmk,matrix-transform = &default_transform;
  };

  split_central: split_central {
    compatible = "zmk,split-central";
  };

  split_peripheral: split_peripheral {
    compatible = "zmk,split-peripheral";
  };

  default_transform: keymap_transform0 {
    compatible = "zmk,matrix-transform";
    columns = <10>;
    rows = <4>;
    map = <
      //  Left side: Row 0 (5 keys)            //  Right side: Row 0 (5 keys)
      RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
      //  Left side: Row 1 (5 keys)            //  Right side: Row 1 (5 keys)
      RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
      //  Left side: Row 2 (5 keys)            //  Right side: Row 2 (5 keys)
      RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
      //  Left side: Row 3 (4 keys - manca il  5o)      //  Right side: Row 3 (4 keys - manca il 1o)
      /*    */RC(3,1) RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7) RC(3,8)
    >;
  };

  cryne_layout: cryne_layout {
    compatible = "zmk,physical-layout";
    display-name = "Cryne Layout";
    
    transform = <&default_transform>;
    
    kscan = <&kscan0>;
    
    keys  //                     w   h    x    y     rot    rx    ry
      = <&key_physical_attrs 100 100    0    0       0     0     0>  // Q
      , <&key_physical_attrs 100 100  100    0       0     0     0>  // W
      , <&key_physical_attrs 100 100  200    0       0     0     0>  // E
      , <&key_physical_attrs 100 100  300    0       0     0     0>  // R
      , <&key_physical_attrs 100 100  400    0       0     0     0>  // T
      , <&key_physical_attrs 100 100  700    0       0     0     0>  // Y
      , <&key_physical_attrs 100 100  800    0       0     0     0>  // U
      , <&key_physical_attrs 100 100  900    0       0     0     0>  // I
      , <&key_physical_attrs 100 100 1000    0       0     0     0>  // O
      , <&key_physical_attrs 100 100 1100    0       0     0     0>  // P
      , <&key_physical_attrs 100 100    0  100       0     0     0>  // A
      , <&key_physical_attrs 100 100  100  100       0     0     0>  // S
      , <&key_physical_attrs 100 100  200  100       0     0     0>  // D
      , <&key_physical_attrs 100 100  300  100       0     0     0>  // F
      , <&key_physical_attrs 100 100  400  100       0     0     0>  // G
      , <&key_physical_attrs 100 100  700  100       0     0     0>  // H
      , <&key_physical_attrs 100 100  800  100       0     0     0>  // J
      , <&key_physical_attrs 100 100  900  100       0     0     0>  // K
      , <&key_physical_attrs 100 100 1000  100       0     0     0>  // L
      , <&key_physical_attrs 100 100 1100  100       0     0     0>  // ;
      , <&key_physical_attrs 100 100    0  200       0     0     0>  // Z
      , <&key_physical_attrs 100 100  100  200       0     0     0>  // X
      , <&key_physical_attrs 100 100  200  200       0     0     0>  // C
      , <&key_physical_attrs 100 100  300  200       0     0     0>  // V
      , <&key_physical_attrs 100 100  400  200       0     0     0>  // B
      , <&key_physical_attrs 100 100  700  200       0     0     0>  // N
      , <&key_physical_attrs 100 100  800  200       0     0     0>  // M
      , <&key_physical_attrs 100 100  900  200       0     0     0>  // ,
      , <&key_physical_attrs 100 100 1000  200       0     0     0>  // .
      , <&key_physical_attrs 100 100 1100  200       0     0     0>  // /
      , <&key_physical_attrs 100 100  100  300       0     0     0>  // Lower L
      , <&key_physical_attrs 100 100  200  300       0     0     0>  // Raise L
      , <&key_physical_attrs 100 100  300  300       0     0     0>  // Space
      , <&key_physical_attrs 100 100  400  300       0     0     0>  // Tab
      , <&key_physical_attrs 100 100  700  300       0     0     0>  // Esc
      , <&key_physical_attrs 100 100  800  300       0     0     0>  // Enter
      , <&key_physical_attrs 100 100  900  300       0     0     0>  // Lower R
      , <&key_physical_attrs 100 100 1000  300       0     0     0>  // Backspace
      ;
  };

  kscan0: kscan0 {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";
    // wakeup-source;  // DISABLED - can cause issues with some clones

    // Debounce settings (prevent accidental double-press)
    debounce-press-ms = <5>;
    debounce-release-ms = <5>;
  };
};
